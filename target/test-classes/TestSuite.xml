<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Smoke Test Suite">
    <test name="Test For Websites">
        <classes>
            <class name="tests.WebsiteNrONETests">
                <methods>
                    <include name="goToWebSiteTest"/>
                    <include name="click_category"/>
                    <include name="click_category_button">
                        <parameter name="category" value="Web" />
                    </include>
                    <include name="click_language"/>
                    <include name="click_add_language_button">
                        <parameter name="language" value="Flash"/>
                    </include>
                    <include name="click_submit_button"/>
                </methods>
            </class>
            <class name="tests.WebsiteNrTWOTests">
                <methods>
                    <include name="goToWebSiteTest"/>
                    <include name="five_seconds_redirect"/>
                    <include name="go_back"/>
                    <include name="two_seconds_redirect"/>
                    <include name="go_back_again"/>
                </methods>
            </class>
            <class name="tests.WebsiteNrTHREETests">
                <methods>
                    <include name="goToWebSiteTest"/>
                    <include name="check_timestamp_validation"/>
                </methods>
            </class>
            <class name="tests.WebsiteNrFOURTests">
                <methods>
                    <include name="goToWebSiteTest"/>
                </methods>
            </class>
            <class name="tests.WebsiteNrFIVETests">
                <methods>
                    <include name="goToWebSiteTest"/>
                    <include name="click_buttons"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">


<suite name="Smoke Test Suite">
    <test name="Smoke Test">
        <classes>
            <class name="tests.TestLogin" >
                <methods>
                    <include name="verifyLogin">
                        <parameter name="username" value="Admin" />
                        <parameter name="password" value="password" />
                    </include>
                </methods>
            </class>
            <class name="tests.TestMakeAppointmentButton" >
                <methods>
                    <include name="makeAppointmentButtonTest">
                        <parameter name="url" value="https://katalon-demo-cura.herokuapp.com/profile.php#login" />
                    </include>
                </methods>
            </class>
            <class name="tests.TestHomeButton" >
                <methods>
                    <include name="makeAppointmentButtonTest">
                        <parameter name="url" value="https://katalon-demo-cura.herokuapp.com/" />
                    </include>
                </methods>
            </class>
        </classes>
    </test>
</suite>